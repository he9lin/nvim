  // list
  "list.indicator": ">",
  "list.selectedSignText": "ï€Œ ",

  // autoformat
  "coc.preferences.formatOnSaveFiletypes": ["css", "markdown", "javascript", "graphql", "html", "yaml",  "json", "python"],
  "coc.preferences.hoverTarget": "float",
  "coc.preferences.jumpCommand": "edit",

  // python config
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,

  // snippets
  "snippets.ultisnips.directories":
  [
    "UltiSnips",
    "~/.config/nvim/utils/snips"
  ],

  // explorer
  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.icon.enableVimDevicons": true,
  "explorer.keyMappings": {
    "<cr>": ["expandable?", "expand", "open"],
    "v": "open:vsplit"
  },

  // language servers
  "codeLens.enable": true,
  "languageserver": {
    "elixirLS": {
      "command": "~/.elixir-ls/release/language_server.sh",
      "filetypes": ["elixir", "eelixir"]
    },
    "haskell": {
      "command": "hie-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        "stack.yaml",
        "cabal.config",
        "package.yaml"
      ],
      "filetypes": [
        "hs",
        "lhs",
        "haskell"
      ],
      "initializationOptions": {
        "languageServerHaskell": {
          "hlintOn": true
        }
      }
    }
  }
